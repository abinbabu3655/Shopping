    <script>
        function verifyPayment(payment, order) {
            $.ajax({
                url: '/verify-payment',
                data: {
                    payment,
                    order
                },
                method: 'post',
                success: (response) => {
                    if (response.status) {
                        swal('Order Placed').then(() => {
                            location.href = "https://abinbabu.com/order-success"

                        })
                    } else {
                        swal('payment failed')
                    }
                }
            })
        }
    </script>






